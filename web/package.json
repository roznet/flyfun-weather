{
  "name": "weatherbrief-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run build:flights && npm run build:briefing && npm run build:settings && npm run build:admin",
    "build:flights": "npx esbuild ts/flights-main.ts --bundle --outfile=dist/flights.js --sourcemap --target=es2020",
    "build:briefing": "npx esbuild ts/briefing-main.ts --bundle --outfile=dist/briefing.js --sourcemap --target=es2020",
    "build:settings": "npx esbuild ts/settings-main.ts --bundle --outfile=dist/settings.js --sourcemap --target=es2020",
    "build:admin": "npx esbuild ts/admin-main.ts --bundle --outfile=dist/admin.js --sourcemap --target=es2020",
    "dev": "npm run dev:flights & npm run dev:briefing & npm run dev:settings & npm run dev:admin",
    "dev:flights": "npx esbuild ts/flights-main.ts --bundle --outfile=dist/flights.js --sourcemap --target=es2020 --watch=forever",
    "dev:briefing": "npx esbuild ts/briefing-main.ts --bundle --outfile=dist/briefing.js --sourcemap --target=es2020 --watch=forever",
    "dev:settings": "npx esbuild ts/settings-main.ts --bundle --outfile=dist/settings.js --sourcemap --target=es2020 --watch=forever",
    "dev:admin": "npx esbuild ts/admin-main.ts --bundle --outfile=dist/admin.js --sourcemap --target=es2020 --watch=forever"
  },
  "dependencies": {
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  }
}
